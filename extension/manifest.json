{
  "description": "Permalink Pages",
  "manifest_version": 2,
  "name": "permalink-pages",
  "version": "1.0",

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    }
  },
  "background": {
    "scripts": ["background/bg.js"]
  },

  "permissions": [
    "tabs",
    "clipboardWrite"
  ]
}
